{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  },
  "git": {
    "commitMessage": "chore: release %s",
    "tagName": "v%s",
    "changelog": "conventional-changelog -p angular | tail -n +3"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  }
}
